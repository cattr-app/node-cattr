{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "eslint-config-airbnb/base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "settings": {
    "import/core-modules": [
      "electron",
      "Vue"
    ],
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".vue"
        ]
      }
    }
  },
  "rules": {
    "comma-dangle": [
      "off"
    ],
    "max-len": [
      "warn",
      {
        "code": 120,
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "no-underscore-dangle": [
      "off"
    ],
    "import/no-extraneous-dependencies": [
      "warn",
      {
        "devDependencies": true
      }
    ],
    "consistent-return": [
      "off"
    ],
    "nonblock-statement-body-position": [
      "warn",
      "below"
    ],
    "operator-linebreak": [
      "warn",
      "after"
    ],
    "no-param-reassign": [
      "off"
    ],
    "arrow-parens": [
      "warn",
      "as-needed"
    ],
    "arrow-body-style": [
      "warn",
      "as-needed"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2,
        "maxEOF": 1
      }
    ],
    "max-statements-per-line": [
      "error",
      {
        "max": 2
      }
    ],
    "padded-blocks": [
      "error",
      "always"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "array-bracket-spacing": [
      "error",
      "always"
    ],
    "curly": [
      "error",
      "multi-or-nest"
    ]
  }
}
